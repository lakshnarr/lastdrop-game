<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b1020"
    android:fillViewport="true">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Last Drop â€“ Dice Controller"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConnectDice"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#4CAF50"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="ðŸŽ²  Connect to GoDice"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConnectESP32"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        android:drawablePadding="8dp"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="ðŸ“¡  Connect ESP32"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvDiceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dice: Not connected"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Battery: --%"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvCurrentTurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="4dp"
        android:background="@android:color/transparent"
        android:text="Current Turn: -"
        android:textColor="#4CAF50"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvESP32Status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="ESP32: Not connected"
        android:textColor="#FFB74D" />

    <TextView
        android:id="@+id/tvScoreboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Scoreboard"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A2035"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/scoreboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P1: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP1"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP1"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP1" />

                <TextView
                    android:id="@+id/tvTileP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P2: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP2"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP2"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP2" />

                <TextView
                    android:id="@+id/tvTileP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P3: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP3"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP3"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP3" />

                <TextView
                    android:id="@+id/tvTileP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P4: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP4"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP4"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP4" />

                <TextView
                    android:id="@+id/tvTileP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLastEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Last Event"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A2035"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tvLastEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="No events yet."
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUndoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:text=""
        android:textColor="#FFA726"
        android:textSize="12sp"
        android:visibility="gone" />

    <!-- Action Buttons Grid -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/btnUndo"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginEnd="6dp"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="  â†©ï¸  Undo Last Roll"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnRefreshScoreboard"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:backgroundTint="#2196F3"
            android:elevation="4dp"
            android:padding="8dp"
            android:text="  ðŸ”„  Refresh"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#F44336"
        android:elevation="4dp"
        android:padding="12dp"
        android:text="  ðŸ”„  Reset Game"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Test Mode Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="ðŸ§ª Testing Tools"
        android:textColor="#FFA500"
        android:textSize="16sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnTestMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FF6600"
        android:text="Test Mode: OFF"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btnSimulateRoll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#4CAF50"
        android:text="Simulate Dice Roll"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

    <!-- Virtual Dice Controls (ESP32 Test Mode) -->
    <LinearLayout
        android:id="@+id/layoutVirtualDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="#1a2530"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ² Virtual Dice Controls"
            android:textColor="#00FFFF"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Dice 1 Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Dice 1:"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDice1Value1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice1Value2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice1Value3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice1Value4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice1Value5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice1Value6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#2196F3"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Dice 2 Controls (for 2-dice mode) -->
        <LinearLayout
            android:id="@+id/layoutDice2Controls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="Dice 2:"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDice2Value1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice2Value2"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice2Value3"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice2Value4"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice2Value5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnDice2Value6"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="4dp"
                android:backgroundTint="#FF9800"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Selected Values Display -->
        <TextView
            android:id="@+id/tvVirtualDiceSelected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Selected: -"
            android:textColor="#00FF00"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Send Button -->
        <Button
            android:id="@+id/btnSendVirtualDice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#4CAF50"
            android:text="Send to ESP32"
            android:textColor="#FFFFFF"
            android:enabled="false" />
    </LinearLayout>

    <!-- Test Log Section -->
    <TextView
        android:id="@+id/tvTestLogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="ðŸ“‹ ESP32 Test Log"
        android:textColor="#00FFFF"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrollTestLog"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#0D1117"
        android:padding="12dp"
        android:scrollbars="vertical"
        android:fadeScrollbars="false"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvTestLog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:text="Console ready..."
            android:textColor="#8B949E"
            android:textSize="13sp"
            android:lineSpacingExtra="2dp" />
    </ScrollView>

    <Button
        android:id="@+id/btnClearLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:backgroundTint="#666666"
        android:text="Clear Log"
        android:textColor="#FFFFFF"
        android:visibility="gone" />

</LinearLayout>

</ScrollView>
