<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b1020"
    android:gravity="top|center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Last Drop â€“ Dice Controller"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnConnectDice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connect to GoDice" />

    <TextView
        android:id="@+id/tvDiceStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Dice: Not connected"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvBattery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Battery: --%"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/tvScoreboardTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Scoreboard"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A2035"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:id="@+id/scoreboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P1: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP1"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP1"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP1" />

                <TextView
                    android:id="@+id/tvTileP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P2: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP2"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP2"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP2" />

                <TextView
                    android:id="@+id/tvTileP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP2" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P3: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP3"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP3"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP3" />

                <TextView
                    android:id="@+id/tvTileP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP3" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp">

                <TextView
                    android:id="@+id/tvScoreP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:text="P4: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvPosP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pos: 0"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvScoreP4"
                    app:layout_constraintStart_toEndOf="@+id/tvScoreP4"
                    app:layout_constraintTop_toTopOf="@+id/tvScoreP4" />

                <TextView
                    android:id="@+id/tvTileP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start"
                    android:textColor="#FFFFFF"
                    app:layout_constraintBottom_toBottomOf="@+id/tvPosP4"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tvPosP4" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvLastEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:paddingBottom="8dp"
        android:text="Last Event"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#1A2035"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/tvLastEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="No events yet."
            android:textColor="#FFFFFF" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvUndoStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Undo: none"
        android:padding="4dp"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnUndo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Undo Last Roll" />

    <Button
        android:id="@+id/btnUndoConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Undo"
        android:enabled="false" />

    <Button
        android:id="@+id/btnRefreshScoreboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refresh Scoreboard" />

    <Button
        android:id="@+id/btnResetScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Score" />

</LinearLayout>
