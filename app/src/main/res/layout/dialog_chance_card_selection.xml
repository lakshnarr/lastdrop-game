<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="20dp"
    android:background="@android:color/transparent">

    <!-- Title -->
    <TextView
        android:id="@+id/tvChanceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ´ CHANCE!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:layout_marginBottom="8dp" />

    <!-- Instruction -->
    <TextView
        android:id="@+id/tvChanceInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸŽ² Roll to Choose! ðŸŽ²"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="20dp" />

    <!-- Card Grid - Row 1 (Cards 1-3) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <!-- Card Slot 1 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot1"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <!-- Dice Number Badge -->
                <TextView
                    android:id="@+id/tvCardNumber1"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Slot 2 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot2"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCardNumber2"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Slot 3 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot3"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCardNumber3"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <!-- Card Grid - Row 2 (Cards 4-6) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <!-- Card Slot 4 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot4"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCardNumber4"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="4"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Slot 5 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot5"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCardNumber5"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card Slot 6 -->
        <androidx.cardview.widget.CardView
            android:id="@+id/cardSlot6"
            android:layout_width="100dp"
            android:layout_height="140dp"
            android:layout_margin="6dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgCard6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop" />

                <TextView
                    android:id="@+id/tvCardNumber6"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:background="@drawable/dice_background"
                    android:gravity="center"
                    android:text="6"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>
