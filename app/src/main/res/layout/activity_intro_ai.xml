<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0b1020"
    android:padding="16dp">

    <ImageView
        android:id="@+id/cloudieImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:contentDescription="Cloudie"
        android:src="@android:drawable/ic_dialog_info"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/cloudieTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Meet Cloudie"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:paddingStart="12dp"
        app:layout_constraintStart_toEndOf="@id/cloudieImage"
        app:layout_constraintTop_toTopOf="@id/cloudieImage"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cloudieSubtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Your AI game host"
        android:textColor="#BBBBBB"
        android:textSize="14sp"
        android:paddingStart="12dp"
        app:layout_constraintStart_toEndOf="@id/cloudieImage"
        app:layout_constraintTop_toBottomOf="@id/cloudieTitle"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/dropsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingTop="24dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/cloudieImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/cloudieDialogue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cloudie is getting ready..."
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingTop="8dp"
        android:paddingBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/dropsRow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnIntroStart"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:textColor="#FFFFFF"
        android:background="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/cloudieDialogue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnIntroSkip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Skip"
        android:textColor="#FFFFFF"
        android:background="#424242"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnIntroStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
