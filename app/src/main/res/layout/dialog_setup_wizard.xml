<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/card_padding"
        android:gravity="center_horizontal">

        <!-- Progress Indicator (Step dots) -->
        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Step Icon -->
        <ImageView
            android:id="@+id/ivStepIcon"
            android:layout_width="@dimen/icon_large"
            android:layout_height="@dimen/icon_large"
            android:src="@drawable/ic_board"
            android:contentDescription="Step Icon"
            android:layout_marginBottom="@dimen/spacing_normal"
            app:tint="@color/primary" />

        <!-- Step Title -->
        <TextView
            android:id="@+id/tvStepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect Board?"
            android:textSize="@dimen/text_title"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="@dimen/spacing_small" />

        <!-- Step Description -->
        <TextView
            android:id="@+id/tvStepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect your LED board for the full experience!"
            android:textSize="@dimen/text_body"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="@dimen/spacing_large" />

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/spacing_normal">

            <ProgressBar
                android:id="@+id/loadingProgress"
                android:layout_width="@dimen/progress_size"
                android:layout_height="@dimen/progress_size"
                android:indeterminateTint="@color/primary" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:textSize="@dimen/text_small"
                android:textColor="#888888"
                android:layout_marginTop="@dimen/spacing_small" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Primary Button (Yes) -->
            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_primary"
                android:text="Yes, Connect!"
                android:textSize="@dimen/text_subtitle"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/primary"
                android:layout_marginBottom="@dimen/spacing_small"
                app:cornerRadius="@dimen/button_corner_radius" />

            <!-- Secondary Button (Skip/No) -->
            <Button
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_secondary"
                android:text="Skip for now"
                android:textSize="@dimen/text_body"
                android:textColor="#666666"
                android:background="@android:color/transparent"
                android:layout_marginBottom="@dimen/spacing_small" />

            <!-- Retry Button (shown on error) -->
            <Button
                android:id="@+id/btnRetry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height_secondary"
                android:text="Try Again"
                android:textSize="@dimen/text_body"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
