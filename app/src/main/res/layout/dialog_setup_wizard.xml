<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Progress Indicator (Step dots) -->
        <LinearLayout
            android:id="@+id/progressIndicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="24dp" />

        <!-- Step Icon -->
        <ImageView
            android:id="@+id/ivStepIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_board"
            android:contentDescription="Step Icon"
            android:layout_marginBottom="16dp"
            app:tint="@color/primary" />

        <!-- Step Title -->
        <TextView
            android:id="@+id/tvStepTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect Board?"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- Step Description -->
        <TextView
            android:id="@+id/tvStepDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect your LED board for the full experience!"
            android:textSize="16sp"
            android:textColor="#666666"
            android:gravity="center"
            android:lineSpacingMultiplier="1.3"
            android:layout_marginBottom="24dp" />

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/layoutLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_marginBottom="16dp">

            <ProgressBar
                android:id="@+id/loadingProgress"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:indeterminateTint="@color/primary" />

            <TextView
                android:id="@+id/tvLoadingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Searching..."
                android:textSize="14sp"
                android:textColor="#888888"
                android:layout_marginTop="8dp" />

        </LinearLayout>

        <!-- Buttons -->
        <LinearLayout
            android:id="@+id/layoutButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Primary Button (Yes) -->
            <Button
                android:id="@+id/btnYes"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:text="Yes, Connect!"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:backgroundTint="@color/primary"
                android:layout_marginBottom="12dp"
                app:cornerRadius="16dp" />

            <!-- Secondary Button (Skip/No) -->
            <Button
                android:id="@+id/btnNo"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Skip for now"
                android:textSize="16sp"
                android:textColor="#666666"
                android:background="@android:color/transparent"
                android:layout_marginBottom="8dp" />

            <!-- Retry Button (shown on error) -->
            <Button
                android:id="@+id/btnRetry"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Try Again"
                android:textSize="16sp"
                android:textColor="@color/primary"
                android:background="@android:color/transparent"
                android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
